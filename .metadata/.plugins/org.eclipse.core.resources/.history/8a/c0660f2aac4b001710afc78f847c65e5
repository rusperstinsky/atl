package core.db;

import java.sql.Connection;
import java.sql.ResultSet;
import java.sql.Statement;
import java.text.NumberFormat;

import model.EmpCallCenter;

public class Tables {

	public static String[] verificaTabla( String tabla ){
		String[] campos = new String[50];
		 Connection con = core.db.Connection.connect();
		 Statement stmt = null;
		 try {
	         Class.forName("org.postgresql.Driver");
	         
	         stmt = con.createStatement();
	         ResultSet rs = stmt.executeQuery(String.format("SELECT column_name FROM information_schema.columns WHERE table_name = '%s';",
	        		 tabla.trim() ));	         
	         while ( rs.next() ) {
	        	 empCallCenter = new EmpCallCenter();
	        	 empCallCenter = empCallCenter.parse(rs);
	          }
	         stmt.close();
	         con.close();
	      } catch ( Exception e ) {
	         System.err.println( e.getClass().getName()+": "+ e.getMessage() );
	         System.exit(0);
	      }
		 
		 if(empCallCenter != null){
			 puesto = empCallCenter.getIdPuesto();
		 }
		  
		 return puesto;
	}
	
}
