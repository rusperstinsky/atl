package ui;

import javax.swing.JPanel;
import net.miginfocom.swing.MigLayout;
import javax.swing.JLabel;
import javax.swing.JTextField;
import javax.swing.table.DefaultTableModel;
import javax.swing.JButton;
import javax.swing.JComboBox;
import javax.swing.JTable;

public class Transaciones extends JPanel {
	private JTextField textField;
	private JComboBox<String> comboBox;
	private JTable table;

	/**
	 * Create the panel.
	 */
	public Transaciones( Integer puesto ) {
		setLayout(new MigLayout("", "[][][][][grow][grow]", "[][][][][][][][grow]"));			
		
		JLabel lblTabla = new JLabel("Tabla");
		add(lblTabla, "cell 4 3,alignx trailing");
		
		textField = new JTextField();
		add(textField, "cell 5 3,growx");
		textField.setColumns(10);
		
		JLabel lblTransaccin = new JLabel("Transacci\u00F3n");
		add(lblTransaccin, "cell 4 4,alignx trailing");
		
		comboBox = new JComboBox<String>();
		comboBox.addItem("");
		comboBox.addItem("Insertar");
		comboBox.addItem("Actualizar");		
		if( puesto == 1 ){
			comboBox.addItem("Borrar");			
		}
		add(comboBox, "cell 5 4,growx");
		
		JButton btnBuscar = new JButton("Buscar");
		add(btnBuscar, "cell 5 6");
		
		DefaultTableModel modelo = new DefaultTableModel();
		table = new JTable( modelo );
		add(table, "cell 4 7 2 1,grow");

	}

}
